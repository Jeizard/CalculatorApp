<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.CalculatorApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">9dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Widget.CalculatorApp.Button.Red" parent="Widget.CalculatorApp.Button">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="Widget.CalculatorApp.Button.Green" parent="Widget.CalculatorApp.Button">
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="Widget.CalculatorApp.Button.GreenText" parent="Widget.CalculatorApp.Button">
        <item name="android:textColor">@color/green</item>
    </style>
</resources>